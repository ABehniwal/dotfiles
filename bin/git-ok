#!/bin/bash

git status -sb # print nothing to do msg
if [ "$#" -eq 0 ]; then
	git diff --staged --stat --exit-code > /dev/null
	if [ $? -eq 0 ]; then
		git diff --stat --exit-code > /dev/null
		if [ $? -eq 0 ]; then
			echo "Nothing to commit, working tree clean"
		else
			echo -e "Nothing staged, so running \e[1;36mgit commit -a\e[m."
			echo -e "\e[0;35m----------------------------------------------------------\e[m"
			git commit -a
		fi
	else
		echo -e "\e[0;35m----------------------------------------------------------\e[m"
		git commit
	fi
else
	echo -e "\e[0;35m----------------------------------------------------------\e[m"
	git commit "$@"
fi
